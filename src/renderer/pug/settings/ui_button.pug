            div(class="media-buttons-item")
              i(class="fa fa-folder" data-icon_type="folder" data-tooltip)

            div(class="media-buttons-item")
              i(class="fa fa-window-close" data-icon_type="close" data-tooltip)

            div(class="media-buttons-item")
