extends ../__layout.pug

block title
  title Buttons

block link
  link(rel="stylesheet", href="../../css/main.css")
  link(rel="stylesheet", href="../../libs/font-awesome.min.css")


block body
  body(class="ui_button-body")
    header(class="ui_button-header")
      div(class="window-title") Buttons
      div(class="window-state-buttons")
        ul(class="window-buttons")
          li(class="fa fa-window-minimize window-min")
          li(class="fa fa-window-maximize window-max")
          li(class="fa fa-window-close window-close")

    section(class="_ui_button_")

      div(class="ui_button")

        ul(class="ui_button-parent")

          li(class="ui_button-list" data-category="control-buttons")
            p Control Buttons
            div(class="control-buttons-item")
              i(class="fa fa-play" data-icon_type="play" data-tooltip)
            div(class="control-buttons-item")
              i(class="fa fa-stop" data-icon_type="stop" data-tooltip)
            div(class="control-buttons-item")
              i(class="fa fa-backward" data-icon_type="backward" data-tooltip)
            div(class="control-buttons-item" data-tooltip)
              i(class="fa fa-forward" data-icon_type="forward" data-tooltip)
            div(class="control-buttons-item")
              i(class="fa fa-volume-up" data-icon_type="volume" data-tooltip)
            div(class="control-buttons-item")
              i(class="fa fa-th-list" data-icon_type="filters" data-tooltip)
            div(class="control-buttons-item")
              i(class="fa fa-cc" data-icon_type="cc" data-tooltip)
            div(class="control-buttons-item")
              i(class="fa fa-repeat" data-icon_type="repeat" data-tooltip)
            div(class="control-buttons-item")
              i(class="fa fa-random" data-icon_type="random" data-tooltip)
            div(class="control-buttons-item")
              i(class="fa fa-expand" data-icon_type="expand" data-tooltip)

          li(class="ui_button-list" data-category="media-buttons")
            p Media Buttons

            div(class="media-buttons-item")
              i(class="fa fa-play" data-icon_type="play" data-tooltip)
            div(class="media-buttons-item")
              i(class="fa fa-pause" data-icon_type="pause" data-tooltip)
            div(class="media-buttons-item")
              i(class="fa fa-check-square-o" data-icon_type="check" data-tooltip)
            div(class="media-buttons-item")
